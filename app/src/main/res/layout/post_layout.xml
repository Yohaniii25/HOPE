<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:text="Fund Heading"
                android:textColor="@color/black"
                android:fontFamily="@font/open_sans_bold"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fundCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="category" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/postCoverImg"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/headerLayout"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="#802196F3"
            app:cardElevation="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/teal_700">

                <ImageView
                    android:id="@+id/iv_category1logo"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/logo" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/postCoverImg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fundDescript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                android:text="Description"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>